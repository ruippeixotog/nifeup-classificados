<% if session[:username] %>
<div id="userarea">
<%=t 'greet_username', :user => session[:username] %>
[<%= link_to I18n.t('logout'), logout_path %>] 
<% if admin? %>
  <%= link_to I18n.t('admin.link'), admin_path, :class => "user_administration" %>
<% end %>
  <%= link_to I18n.t('users.ads'), ads_users_path, :class => "user_ads" %>
  <%= link_to I18n.t('users.favorites'), favorites_users_path, :class => "user_favorites" %>
</div>
<% else %>
<div id="loginbutton">
  <div id="signbtn">
    <%= link_to I18n.t('login'), login_path, :class => "btnsignin" %>
  </div>
  <div id="frmsignin">
  <%= form_for :person, :url => authenticate_users_path do |f| %>
      <p id="puser">
      <%= f.label :username %><br />
      <%= f.text_field :username %><br/>
      <%= f.label :password %><br />
      <%= f.password_field :password %><br/>
      <%= f.submit I18n.t('submit'), :id => 'submitbtn' %>
      </p>
      <% end -%>
      <p id="msg"></p>
  </div>
</div>
<% end %>
