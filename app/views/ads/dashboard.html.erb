<%= javascript_include_tag "dashboard" %>
<%= javascript_tag do -%>
	$(document).ready(function() {
	$(".ad_clickable").click(function() {
		var id = $(this).data("id");
		window.location.href="<%= ads_path %>/" + id;
	});
});
<% end -%>

<% content_for :title, 'dashboard' %>

